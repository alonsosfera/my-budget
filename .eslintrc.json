{
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "rules": {
    "max-lines": [
      "warn",
      {
        "max": 200,
        "skipBlankLines": true
      }
    ],
    "max-len": [
      "warn",
      {
        "code": 120
      }
    ],
    "no-trailing-spaces": "error",
    "no-console": [
      "error",
      {
        "allow": [
          "warn",
          "error",
          "info"
        ]
      }
    ],
    "arrow-spacing": [
      "error",
      {
        "before": true,
        "after": true
      }
    ],
    "arrow-parens": [
      "warn",
      "as-needed"
    ],
    "space-in-parens": [
      "error",
      "never"
    ],
    "no-lonely-if": "error",
    "dot-location": [
      "error",
      "property"
    ],
    "no-var": "warn",
    "jsx-quotes": [
      "error",
      "prefer-double"
    ],
    "comma-style": [
      "error",
      "last"
    ],
    "comma-dangle": [
      "error",
      "never"
    ],
    "default-case": "error",
    "no-redeclare": "error",
    "no-useless-return": "error",
    "object-curly-spacing": ["warn", "always"],
    "prefer-arrow-callback": "error",
    "prefer-const": "error",
    "prefer-template": "error",
    "dot-notation": "error",
    "max-depth": [
      "error",
      3
    ],
    "quotes": [
      "warn",
      "double"
    ],
    "semi": [
      "error",
      "never"
    ],
    "react/jsx-filename-extension": [
      1,
      {
        "extensions": [
          ".js"
        ]
      }
    ],
    "space-infix-ops": "error",
    "react/no-deprecated": "warn",
    "react/react-in-jsx-scope": 0,
    "react/jsx-closing-bracket-location": [
      "error",
      {
        "selfClosing": "after-props",
        "nonEmpty": "after-props"
      }
    ],
    "react/jsx-first-prop-new-line": [
      "error",
      "multiline-multiprop"
    ],
    "react/jsx-indent": [
      "error",
      2
    ],
    "react/jsx-indent-props": [
      "error",
      2
    ],
    "react/jsx-no-bind": [
      "error",
      {
        "allowArrowFunctions": true
      }
    ],
    "react/jsx-no-duplicate-props": [
      "error"
    ],
    "react/jsx-space-before-closing": "error",
    "react/jsx-tag-spacing": [
      "error",
      {
        "closingSlash": "never",
        "beforeSelfClosing": "always",
        "afterOpening": "never",
        "beforeClosing": "never"
      }
    ],
    "react/jsx-max-props-per-line": [
      "error",
      {
        "maximum": 2,
        "when": "always"
      }
    ],
    "react/jsx-uses-react": "error",
    "react/jsx-uses-vars": "error",
    "react/prop-types": "off"
  }
}
